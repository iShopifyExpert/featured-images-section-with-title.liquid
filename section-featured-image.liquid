{% if section.settings.show_slider %}
<div class="collection-tiles">{% for block in section.blocks %}
  <a href="{{ block.settings.url }}" class="collection-tiles__tile" title="Floor Lamps">{% if block.settings.image %}
    <img class="lazy" src="{{ block.settings.image | img_url: '1000x' }}" sizes="900vw" srcset="{{ block.settings.image | img_url: '1000x' }} 1x, {{ block.settings.image | img_url: '2000x' }} 2x" style="">{% endif %}
    <div class="collection-tiles__tile-reveal">
      <h3 class="collection-tiles__title-title">{{block.settings.title}}</h3>
      <span class="btn btn--medium btn--pill btn--thinner btn--caps btn--yellow">{{block.settings.text}}</span>
    </div>
  </a>{% endfor %}
</div>
{% endif %}

{% schema %}
  {
    "name": "Custom Slider",
    "max_blocks": 15,
    "settings": [
      {
        "type": "checkbox",
        "id": "show_slider",
        "label": "Show slides",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link URL"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Overlay Title"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Overlay Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Slider",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}
